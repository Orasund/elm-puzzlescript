{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "elm make --docs=docs.json",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
    }
    {
      "label": "Run tests",
      "type": "shell",
      "command": "./test.sh",
      "windows": {
        "command": ".\\test.cmd"
      },
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOn": "build"
    }
  ]
}